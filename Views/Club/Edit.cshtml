@using WebAppStudy.Data.Enum
@using WebAppStudy.ViewModule
@model EditClubViewModule

@{
}
<form method="post" asp-action="Edit">
    <input type="hidden" value="AdressId" id="AdressId" />
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" class="form-control" placeholder="Enter image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClubCategory">Category</label>
        <select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()" class="form-control">
            <option selected="selected" value="">--Select--</option>
        </select>
        <span asp-validation-for="ClubCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Adress.Street">Street</label>
        <input asp-for="Adress.Street" class="form-control" placeholder="Enter street">
        <span asp-validation-for="Adress.Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Adress.City">City</label>
        <input asp-for="Adress.City" class="form-control" placeholder="Enter city">
        <span asp-validation-for="Adress.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Adress.State">State</label>
        <input asp-for="Adress.State" class="form-control" placeholder="Enter state">
        <span asp-validation-for="Adress.State" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>